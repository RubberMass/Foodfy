{% extends "layout.njk" %}

{% block head%}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
    <section class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <img src="materials/{{item.id}}.png" alt="Imagem de {{item.title}}">

                <h3>{{item.title}}</h3>

                <p>{{item.autor}}</p>
            </div>
        {% endfor %}

    </section>

</div>

<div class="modal-overlay ">
    <div class="modal">
        <div class="img-modal">
            <img src="materials/{{item.id}}" alt="Imagem de {{item.title}}">
        </div>
        <div class="modal-lanche">
            <h2>Triplo bacon burger</h2>
            <p>por Jorge Relato</p>
        </div>
        <div class="close-modal">
            <p>Fechar</p>
        </div>
    </div>
</div>

<script src="script.js"></script>

{% endblock %}